{% extends 'base.html.twig' %}

{% block title %}Все статьи{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .post_card {
        border-bottom: 1px solid #ccc;
        margin-top: 10px;
    }
    .post_date { font-size:11px;}
    .post_card h2 {margin-top:0}
</style>

<div class="example-wrapper">
    <a href="/create">Написать пост</a>
    {%for post in posts%}
    <div class="post_card">
       <div>
            <span class="post_author">От: {{post.getUser().getEmail()}}</span>
       </div>
       <div>
            <span class="post_date">{{post.getDateAdd.format('Y-m-d')}}</span>
       </div>
       <h2>{{post.getTitle()}}</h2>
        <p>{{post.getText()}}</p>
    </div>
    {%endfor%}
</div>
{% endblock %}
