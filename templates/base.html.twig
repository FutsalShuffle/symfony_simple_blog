<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Блог{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>
        <header>
            <a class="link" href="/">Главная</a>
            <a class="link" href="/login">Логин</a>
            <a class="link" href="/register">Регистрация</a>
        </header>
        <section>
            {% block body %}{% endblock %}
        </section>
    </body>
    <style>
        header {
            display:flex;
            justify-content: center;
            background-color: #ccc;
            height:50px;
            align-items:center;
        }
        a.link {
            padding:15px;
        }
        body {
            margin:0;
        }
        form div {
            padding: 8px;
        }
        section {
            width: 1200px;
            margin:0 auto;
        }
        form input {
            display:block;
        }
        form textarea {
            display:block;
        }
    </style>
</html>
